! ================================================================
!   Preferred Dynamic Constraints.
! ================================================================
! Equipment constraints:
!    Stations.
!           SC  HN  NL  FD  LA  PT  KP  OV  BR  MK
!           o   o   o   o   o   o   o   o   o   o
!       Minimum number of stations [8]
!
!    Bands and polarizations.
!           90cm  50cm  20cm  13cm  6cm  4cm  2cm  1cm  7mm  3mm
!                                    d
!
! Weather constraints:
!    Weather suitable for 6cm.
!
! Date constraints:
!    Please observe < 1 week from 25 June 2018
!
! Start-time constraints:
!    PT_LST [1200 - 1700]
!
! Other instructions:
!    Please run BH224A1.key and BH224A2.key such that the two
!    observations are roughly 1 month apart.
!
! ================================================================

! ================================================================
! =================  Cover Information  ==========================
! ================================================================

version  = 1
expt     = 'Confirmation of Superluminal Motion for Rare Relativistic Supernova AT2018cow'
expcode  = BH224A1

piname   = 'Anna Ho'
address1 = 'Cahill Center for Astrophysics'  
address2 = 'California Institute of Technology, MC 249-17'                    
address3 = '1200 E California Boulevard'
address4 = 'Pasadena, CA, 91125, USA'
phone    = '650 338 9762 '    
obsphone = '650 338 9762 '    
email    = ah@astro.caltech.edu
obsmode  = '6cm 128-4-2 '
obstype  = VLBA


! ================================================================
! ==============  Correlator Information  ========================
! ================================================================

correl   = 'Socorro'
coravg   = 2
corchan  = 256
cornant  = 10 
corpol   = 'on'
corwtfn  = 'uniform'
corsrcs  = 'from schedule'
cortape  = 'FTP'

! ================================================================
! ==================  Program control  ===========================
! ================================================================

overwrit
sumitem  = el1, dwell

! ================================================================
! ====================  Station Catalog  =========================
! ================================================================

stafile  = $SCHED/catalogs/stations_RDBE.dat
srcfile  = $SCHED/catalogs/sources.vlba.2012jul
freqfile = $SCHED/catalogs/freq_RDBE.dat

stations = VLBA_SC, VLBA_HN, VLBA_NL, VLBA_FD, VLBA_LA,
           VLBA_PT, VLBA_KP, VLBA_OV, VLBA_BR, VLBA_MK

! ==========================================================
! ==================== Source Catalog  =====================
! ==========================================================
! Get the sources from the embedded catalog.
!G1 group
 
srccat / 
source='AT2018cow'  ra=16:16:00.22 dec=+22:16:04.8  equinox='J2000' /
source='PhaseCenter' ra=16:15:41.6710 dec=+22:16:28.3181 equinox='J2000' /
endcat /

! ================================================================
! =======================  Setup file  ===========================
! ================================================================

setini    = egvlba.6cm /
  nchan   = 4        !  Number of baseband channels.
  bbfilt  = 128.0    !  Bandwidth per baseband channel (MHz)
  pol     = dual     !  RCP, LCP, or DUAL.
  bits    = 2        !  Bits per sample   
  dbe     = rdbe_ddc !  Use the DDC personality of the RDBE.
  netside = L        !  Use lower sidebands in the RDBE/DDC.
  freqref = 4300.0, 4300.0, 7600.0, 7600.0   !  RF = freqref + freqoff (LO will be 4100).
  freqoff = 140.25, 140.25, -140.25, -140.25 /
endset /

! ================================================================
! =================  Initial Scan Information  ===================
! ================================================================

lst   = VLBA_PT
year  = 2018
month = 06
day   = 27
start = 12:00:00


! ==========================================================
! ================Multiple phase centers  ==================
! ==========================================================
srcfile2='egcentsrc.dat'
pcenters /
name='4C39'
sources='4C39.25A','4C39.25B','4C39.25C','4C39.25D',
        '4C39.25E','4C39.25F','4C39.25G','4C39.25H',
        '4C39.25I','4C39.25J'
/
name='J0925'
sources='J0925-2027', 'J0925-2027A', 'J0925-2027B', 'J0925-2027C', 
        'J0925-2027D', 'J0925-2027E'
/
endcent /


! ================================================================
! ========================  The Scans  ===========================
! ================================================================
! 
! Observations are 4 hours
! Phase ref for AT2018cow: J1619+2247 ~ 0.38 Jy at S band, 0.64 Jy at C band
! A second phase ref for AT2018cow: J1610+2424 ~ 0.36 Jy at S band, 0.35 Jy at C band
! 
! A second phase center is a source at 16:15:41.6710 +022.16.28.3181
!
! fringe finder: J1642+3948

setup=egvlba.6cm
 
! ================= Start the first set of scans ==================

! AT2018cow
source='J1619+2247'  dur=0:50 /
source='J1610+2424'  dur=0:50 /
group 4 rep=12
 source='AT2018cow' dur=3:30 /
 source='J1619+2247' dur=0:50 /
 source='AT2018cow' dur=3:30 /
 source='J1610+2424'  dur=0:50 /

!========================== Astrometry Cal=========================

! Second phase center for correlation
source='PhaseCenter' dur=1:00 /

! ================= Start the second set of scans ==================

! AT2018cow
source='J1619+2247'  dur=0:50 /
source='J1610+2424'  dur=0:50 /
group 2 rep=12
 source='AT2018cow' dur=3:30 /
 source='J1619+2247' dur=0:50 /
 source='AT2018cow' dur=3:30 /
 source='J1610+2424'  dur=0:50 /
 
!========================== Astrometry Cal=========================

! Second phase center for correlatoin
source='PhaseCenter' dur=1:00 /

!========================== Fringe finder =========================

source='J1642+3948' dwell=3:00 /

!================= Start the third set of scans =================

! AT2018cow
source='J1619+2247'  dur=0:50 /
source='J1610+2424'  dur=0:50 /
! group 3 rep=2
group 2 rep=12
 source='AT2018cow' dur=3:30 /
 source='J1619+2247' dur=0:50 /
 source='AT2018cow' dur=3:30 /
 source='J1610+2424'  dur=0:50 /

!========================== Astrometry Cal=========================

! Second Phase Center
source='PhaseCenter' dur=1:00 /

!================= Start the second set of scans =================

! AT2018cow
source='J1619+2247'  dur=0:50 /
source='J1610+2424'  dur=0:50 /
! group 3 rep=2
group 2 rep=12
 source='AT2018cow' dur=3:30 /
 source='J1619+2247' dur=0:50 /
 source='AT2018cow' dur=3:30 /
 source='J1610+2424'  dur=0:50 /

!========================== Astrometry Cal=========================

! Second Phase Center
source='PhaseCenter' dur=1:00 /
